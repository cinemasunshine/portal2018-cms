<?xml version="1.0"?>
<ruleset name="MyStandard">
    <description>A custom coding standard</description>

    <!-- file -->
    <file>./config</file>
    <file>./src</file>
    <file>./tests</file>

    <!-- exclude-pattern -->
    <exclude-pattern>/src/ORM/Proxy/</exclude-pattern>
    <exclude-pattern>/src/bootstrap.php</exclude-pattern>

    <!-- arg -->
    <arg name="report-summary"/>
    <arg name="report-full" value="./report/phpcs_full.txt"/>
    <arg value="sp"/>

    <!-- Base rule -->
    <rule ref="Motionpicture"/>

    <!-- Require that single line arrays have the correct spacing: no space around brackets and one space after comma -->
    <rule ref="SlevomatCodingStandard.Arrays.SingleLineArrayWhitespace"/>
    <!-- Require comma after last element in multi-line array -->
    <rule ref="SlevomatCodingStandard.Arrays.TrailingArrayComma"/>

</ruleset>
