{% extends "layout.html.twig" %}

{% block title %}新規追加 | メインバナー{% endblock %}

{% block breadcrumb %}
<ol class="breadcrumb">
    <li class="breadcrumb-item">ダッシュボード</li>
    <li class="breadcrumb-item">メインバナー</li>
    <li class="breadcrumb-item active">新規追加</li>
</ol>
{% endblock %}

{% block javascript %}
<script>
$(function(){
    var $form = $('form[name="main_banner"]');
    
    $form.find('input[name="link_type"]').change(function() {
        controlLinkUrlField($(this).val());
    });
    
    /**
     * リンクURLフィールド制御
     */
    function controlLinkUrlField(type) {
        var $fieldLinkUrl = $form.find('.field-link-url');
        
        if (type === '1') {
            $fieldLinkUrl.show();
            $fieldLinkUrl.find('input').prop('disabled', false);
        } else {
            $fieldLinkUrl.find('input').prop('disabled', true);
            $fieldLinkUrl.hide();
        }
    }
    
    /**
     * execute
     */
    function execute() {
        controlLinkUrlField($form.find('input[name="link_type"]:checked').val());
    }
    
    execute();
});
</script>
{% endblock %}

{% block container %}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <form name="main_banner" method="post" action="#">
                <div class="card-header">
                    新規追加
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">ID</label>
                        <div class="col-md-9">
                            <p class="form-control-static">&nbsp;</p>
                            <span class="help-block">※自動でIDが付与されます。</span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">バナータイトル</label>
                        <div class="col-md-9">
                            <input type="text" name="name" class="form-control" value="">
                            <div class="invalid-feedback">
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">リンク設定</label>
                        <div class="col-md-9">
                            <div class="row">
                                <div class="col-md-12 col-form-label">
                                    <div class="form-check form-check-inline mr-1">
                                        <input type="radio" class="form-check-input" id="link-type-1" name="link_type" value="1">
                                        <label class="form-check-label" for="link-type-1">URL</label>
                                    </div>
                                    <div class="form-check form-check-inline mr-1">
                                        <input type="radio" class="form-check-input" id="link-type-2" name="link_type" value="2">
                                        <label class="form-check-label" for="link-type-2">リンクなし</label>
                                    </div>
                                </div>
                                <div class="col-md-12 field-link-url">
                                    <input type="url" name="link_url" class="form-control" value="">
                                </div>
                            </div>
                            <div class="invalid-feedback">
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">画像</label>
                        <div class="col-md-9">
                            <input type="file" name="image" class="form-control">
                            <span class="help-block">jpg、png、gif形式のみ対応。○○MB以内。</span>
                            <div class="invalid-feedback">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">保存</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
