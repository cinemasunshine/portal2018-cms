{
    "name": "cinemasunshine/portal2018-admin",
    "description": "Cinemasunshine Portal2018 Admin",
    "type": "project",
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Cinemasunshine\\PortalAdmin\\": "src/"
        }
    },
    "require": {
        "php": "~7.2",
        "slim/slim" : "^3.12",
        "slim/twig-view": "^2.5",
        "slim/flash": "^0.4.0",
        "monolog/monolog": "^1.23",
        "vlucas/phpdotenv": "^2.5",
        "doctrine/orm": "2.6.*",
        "zendframework/zend-validator": "^2.10",
        "zendframework/zend-form": "^2.12",
        "zendframework/zend-i18n": "^2.9",
        "zendframework/zend-i18n-resources": "^2.6",
        "zendframework/zend-session": "^2.8",
        "zendframework/zend-uri": "^2.6",
        "microsoft/azure-storage-blob": "^1.5",
        "intervention/image": "^2.4",
        "symfony/console": "^4.3",
        "symfony/filesystem": "^4.3"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.4",
        "phpstan/phpstan": "^0.11.16",
        "phpstan/phpstan-doctrine": "^0.11.6"
    },
    "scripts": {
        "phpcs": "vendor/bin/phpcs --standard=phpcs.xml",
        "phpcbf": "vendor/bin/phpcbf --standard=phpcs.xml",
        "phpstan": "vendor/bin/phpstan analyse -n --no-progress -c phpstan.neon"
    }
}
